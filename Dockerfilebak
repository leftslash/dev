FROM ubuntu:devel

ENV USER=todd
ENV TZ=America/New_York

RUN echo ${TZ} > /etc/timezone && apt-get update &&                \
    apt-get install -y tzdata build-essential gdb vim git ssh tree \
    gcc-15-doc clang-20-doc git-doc make-doc libstdc++-15-doc      \
    clang-20-examples clang-format-20 clang-tidy-20 clang-tools-20 \
    libclang-20-dev libclang-common-20-dev emscripten cmake        \
    pkg-config valgrind &&                                         \
    rm /etc/localtime &&                                           \
    ln -snf /usr/share/zoneinfo/${TZ} /etc/localtime &&            \
    dpkg-reconfigure -f noninteractive tzdata

RUN useradd --create-home --shell /bin/bash ${USER} && \
    mkdir /home/${USER}/workspace && chown ${USER} /home/${USER}/workspace

USER ${USER}

WORKDIR /home/${USER}

# vi: set cc=80: */
